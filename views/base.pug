doctype html
html(lang="en")
  head
  block head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700&display=swap"
      rel="stylesheet")
    link(rel="stylesheet" href="/css/style.css")
    link(rel="shortcut icon" type="image/png" href="/img/favicon.png")
    script(src="https://js.stripe.com/v3/" type="module" defer crossorigin) 
    title Natours | #{title} 


  body
    // Modal
    if showModal
      div#overlay.overlay_hidden(aria-hidden="true")
        - if(modalLayout === '_modalCheckBookingStatus') 
        include ui/_modalCheckBookingStatus
        // Add other Layout options
        
        include ui/_modalBackdrop

// Header
include layouts/_header

// Content
block content

// Footer
include layouts/_footer



